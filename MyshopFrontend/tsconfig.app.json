{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
     ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "node_modules/angular-4-data-table/**/*.ts"
    
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
